{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "es2020",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": ".",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "backend/**/*.ts",
    "frontend/**/*.ts",
    "frontend/**/*.tsx",
    ".next/types/**/*.ts",
    "**/*.ts", "types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
